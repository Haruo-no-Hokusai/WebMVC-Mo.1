@model TestDataBase1to1toMany.Models.Component

@inject IFservice Feature

<h1>Add</h1>

<h4>Component</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Add">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div>
                <a>Feature</a>
                <select asp-for="FeatureId" class="form-select">
                    @foreach (var item in @Feature.GetAllFeature())
                    {
                        <option value="@item.Id">@item.Name</option>
                    }
                    <option disabled selected>Feature</option>
                </select>
                <span asp-validation-for="FeatureId" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ProductExtend.Color" class="form-label"></label>
                <input asp-for="ProductExtend.Color" class="form-control">
                <span asp-validation-for="ProductExtend.Color" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ProductExtend.Weight" class="form-label"></label>
                <input type="number" asp-for="ProductExtend.Weight" class="form-control">
                <span asp-validation-for="ProductExtend.Weight" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
