@model IEnumerable<ProductDetail>

@inject IPservice Product
<a class="btn btn-primary" asp-action="Add">Add</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(p => p.Id)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Description)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Create)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.ProductsId)</th>
            <th scope="col"> </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var p in Model)
            {
                <tr>
                    <th scope="row">@p.Id</th>
                    <td>@p.Description</td>
                    <td>@p.Create</td>
                    <td>@Product.GetName(p.ProductsId)</td>
                    <td>
                        <img class="w-25" src="@p.Image"/>
                    </td>
                    <td>
                        <a class="btn btn-primary" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                        <a class="btn btn-danger" asp-action="Delete" asp-route-id="@p.Id"
                           onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>