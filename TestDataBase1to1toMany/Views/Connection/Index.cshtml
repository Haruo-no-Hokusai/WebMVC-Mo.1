@model IEnumerable<ComponentToProduct>

@inject IPservice Product 
@inject IComservice Component
<a class="btn btn-primary" asp-action="Add">Add</a>
<table class="table table-striped">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(p => p.ProductsId)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.ComponentId)</th>
            <th scope="col"> </th>
        </tr>
    </thead>
    <tbody>
        @if (Model != null)
        {
            @foreach (var p in Model)
            {
                <tr>
                    <th scope="row">@Product.GetName(p.ProductsId)</th>
                    <td>@Component.GetName(p.ComponentId)</td>
                    <td>
                        @* <a class="btn btn-primary" asp-action="Edit" asp-route-ProductId="@p.ProductsId" asp-route-ComponentId="@p.ComponentId">Edit</a> *@
                        <a class="btn btn-danger" asp-action="Delete" asp-route-ProductId="@p.ProductsId" asp-route-ComponentId="@p.ComponentId"
                           onclick="return confirm('Are you sure?')">Delete</a>
                    </td>
                </tr>
            }
        }
    </tbody>
</table>