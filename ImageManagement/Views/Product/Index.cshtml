@model IEnumerable<Product>

    <a class="btn btn-primary" asp-action="Create">Create</a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th scope="col">@Html.DisplayNameFor(p=>p.Id)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Name)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Price)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.Amount)</th>
            <th scope="col">@Html.DisplayNameFor(p => p.ImgUrl)</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var p in Model)
        {
            <tr>
                <td scope="row">@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Price</td>
                <td>@p.Amount</td>
                <td>
                    <img src="@p.ImgUrl" height="60px" class="rounded border" />
                </td>
                <td>
                    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@p.Id">Edit</a>
                    <a class="btn btn-danger" asp-action="Delete" asp-route-id="@p.Id" onclick="return confirm('Are you sure?')">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
